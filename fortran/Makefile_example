# Object files
OBJS = gitversion.o loadsavetxt.o pickpoints.o leastsquare.o poles.o padem.o main.o

# -------------------------------------------------------------------------------------------------------------------

# Binary
PROG =  Pade_approximants

# -------------------------------------------------------------------------------------------------------------------

# Libraries

# On local machine:
LIBS = -L"${LAPACKPATH}" -llapack -lrefblas -ltmglib  -L"quad/zgels/zgels_quad" -lzgelsquad

# On India:
#LIBS = -L${LIBRARY_PATH}  -llapack -lf77blas -lcblas -latlas -L"quad/zgels/zgels_quad" -lzgelsquad

# On Matter:
#LIBS =  -Nmkl -mkl=sequential -L"quad/zgels/zgels_quad" -lzgelsquad

# On Milou:
#LIBS = -L${LIBRARY_PATH} -L"quad/zgels/zgels_quad" -lzgelsquad

# -------------------------------------------------------------------------------------------------------------------

# Compilers

# On local machine:
F90 = gfortran 
F90FLAGS =  -O2 # -fopenmp -g -Wall -fbounds-check -Waliasing -fdump-core  -Wreturn-type 

# On India:
#INCLUDE = -I/usr/local/include
#CC = c++ -O2 # -g -fopenmp -fbounds-check  #  -Wall  # -Waddress   
#F90 = gfortran -fopenmp  
#F90FLAGS =  -O2 # -g #-Wall -fbounds-check -Waliasing -fdump-core  -Wreturn-type 

# On matter:
#F90 = ifort 
#F90FLAGS =  -O2

# On Milou:
#F90= mpiifort -lmkl_intel_lp64 -lmkl_sequential -lmkl_core

LDFLAGS = $(LIBS)

# -------------------------------------------------------------------------------------------------------------------

all: gitR $(PROG)

gitR: gitversion_template.f90
	./setgitversion.sh 

$(PROG): $(OBJS)
	$(F90) $(LIBS) -o $@ $(OBJS)

#$(F90) $(LDFLAGS) -o $@ $(OBJS) $(LIBS)

clean:
	rm -f $(PROG) $(OBJS) *.mod


.SUFFIXES: $(SUFFIXES) .f90 .F90 .f .cpp

.f.o:
	$(F77) $(F77FLAGS) -c $<
.f90.o:
	$(F90) $(F90FLAGS) -c $<
.F90.o:
	$(F90) $(F90FLAGS) -c $<
.f90.mod:
	$(F90) $(F90FLAGS) -c $<
.F90.mod:
	$(F90) $(F90FLAGS) -c $<

.mod.o:
	$(F90) $(F90FLAGS) -c $<

.cpp.o:
	$(CC) $(INCLUDE) $(LIBS) -c $<

