# -------------------------------------------------------------------------------------------------------------------

%.o: %.F90       # if any file with .o looking at, also consider .F90 files with the same name
	$(FCOMPILER) $(F90FLAGS) -c $<

%.o: %.f90
	$(FCOMPILER) $(F90FLAGS) -c $<

%.o: %.cpp
	$(CC) $(INCLUDE) $(LIBS) -c $<

# Binary
PROG =  Pade_approximants

# Object files
OBJS = gitversion.o loadsavetxt.o pickpoints.o leastsquare.o poles.o padem.o main.o

all: gitR $(PROG)

gitR: gitversion_template.f90
	./setgitversion.sh 

$(PROG): $(OBJS)
	$(FCOMPILER) $^ $(LIBDIR) $(LDLIBS) -o $(@)

# dependence of each routine to other routines
main.o: loadsavetxt.o padem.o 
padem.o: gitversion.o pickpoints.o leastsquare.o poles.o
poles.o:
leastsquare.o:
pickpoints.o:
loadsavetxt.o: 
gitversion.o: 

pristine:
	rm -f *.o
	rm -f $(PROG)
